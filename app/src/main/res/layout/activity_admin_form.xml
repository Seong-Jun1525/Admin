<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/adminFormPage"
    android:orientation="vertical">
    <soup.neumorphism.NeumorphImageView
        style="@style/Widget.Neumorph.ImageView"
        android:id="@+id/backBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="20dp"
        android:layout_gravity="start"
        android:src="@drawable/back"/>
    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:id="@+id/adminAddCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="관리자 등록"
                android:textColor="@color/mainText"
                android:textSize="42sp"
                android:textStyle="bold"/>
            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextIdField"
                android:padding="25dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/input_adminId"
                    android:padding="15dp"
                    android:hint="Admin ID"
                    android:inputType="text"
                    android:textColor="@color/mainText" />
            </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:id="@+id/editTextPwField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/input_adminPW"
                    android:padding="15dp"
                    android:hint="Admin PW"
                    android:inputType="textPassword"
                    android:textColor="@color/mainText" />
            </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:id="@+id/editTextPositionField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/input_adminPosition"
                    android:padding="15dp"
                    android:hint="관리자 직책"
                    android:inputType="text"
                    android:textColor="@color/mainText" />
            </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphButton
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="관리자 등록"
                android:textStyle="bold"
                android:id="@+id/adminAddBtn"/>
        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>
</LinearLayout>